syntax on
set backspace=indent,eol,start
set matchpairs+=<:>
set shortmess=atToOI
set hidden
set encoding=utf-8
set termencoding=utf-8
set confirm
set ruler
set linebreak
set wrap
set whichwrap=b,s,h,l,<,>,[,]
set showmatch
set incsearch
set ignorecase
set smartcase
set laststatus=0
colorscheme hornet
set mouse-=a
nnoremap G G$
vnoremap G G$
nnoremap ; :
vnoremap ; :
nnoremap h h

set noloadplugins

let vimpager_disable_x11 = 1
let vimpager_scrolloff = 0

function s:Escape()
    let g:addons = [
        \ 'github:vim-scripts/AnsiEsc.vim'
    \ ]
    let g:ft_addons = {}
    let g:lazy_addons = {}

    silent! so ~/.vim/vimrc

    set laststatus=0

    so ~/.vim/addons/AnsiEsc.vim/plugin/cecutil.vim
    so ~/.vim/addons/AnsiEsc.vim/plugin/AnsiEscPlugin.vim
    so ~/.vim/addons/AnsiEsc.vim/autoload/AnsiEsc.vim

    " Initalize AnsiEsc highlighting
    AnsiEsc
    AnsiEsc

    " Change default for ansiWhite
    hi ansiWhite ctermfg=245
endfunction

au BufReadPost * call s:Escape()

" vim:set filetype=vim:
